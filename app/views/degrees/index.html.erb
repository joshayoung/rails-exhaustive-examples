<p id="notice"><%= notice %></p>

<h1>Degrees</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Level</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% degree.each do |d| %>
      <tr>
        <td><%= d.title %></td>
        <td><%= d.level %></td>
        <td><%= d.completed %></td>
        <td><%= link_to 'Show', teacher_degree_path(teacher, d) %></td>
        <td><%= link_to 'Edit', edit_teacher_degree_path(teacher, d) %></td>
        <td><%= link_to 'Destroy', teacher_degree_path(teacher, d), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Degree', new_teacher_degree_path(teacher) %>
