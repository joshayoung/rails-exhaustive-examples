<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.age %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add Degree', new_teacher_degree_path(teacher.id)  %></td>
        <td><%= link_to 'Add Class', new_teacher_klass_path(teacher.id)  %></td>
        <td><%= link_to 'List Classes', teacher_klasses_path(teacher.id)  %></td>
        <td><%= link_to 'List Degrees', teacher_degrees_path(teacher.id)  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

